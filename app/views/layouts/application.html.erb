<!DOCTYPE html>
<html>
  <head>
    <title>FeedbackTracker</title>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav>
      <% FeedbackState.all.each do |state| %>
        <%= link_to state.name, state %>
      <% end %>

      <%= link_to 'New Feedback', new_feedback_path %>

      <%= flash_messages %>

      <% Integration.all.each do |integration| %>
        <%= button_to "Sync #{integration.source}", integration_sync_path(integration), method: :post %>
      <% end %>
    </nav>

    <%= yield %>
    
  </body>
</html>
